<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/paylist_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/infos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/box_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="@dimen/img_box_size_list"
                    android:layout_height="@dimen/img_box_size_list"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/type_icon"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/img_box_size_list"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="@dimen/app_text_size"
                    android:layout_marginStart="10dp"
                    android:paddingStart="5dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/img_money"
                    android:layout_width="@dimen/img_box_size_list"
                    android:layout_height="@dimen/img_box_size_list"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/euro_icon"/>

                <TextView
                    android:id="@+id/money"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/img_box_size_list"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="@dimen/app_text_size"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:textColor="@color/black"/>

                <!--android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    attr:fabSize="mini"
                    android:elevation="0dp"
                    app:elevation="0dp"
                    android:layout_gravity="center"
                    android:src="@drawable/history"
                    android:contentDescription="@string/fab_history" /-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/img_data"
                    android:layout_width="@dimen/img_box_size_list"
                    android:layout_height="@dimen/img_box_size_list"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/data_icon"/>

                <TextView
                    android:id="@+id/data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/img_box_size_list"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="@dimen/app_text_size"
                    android:layout_marginStart="10dp"
                    android:paddingStart="5dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            attr:fabSize="mini"
            android:elevation="0dp"
            app:elevation="0dp"
            android:layout_gravity="center"
            android:src="@drawable/history"
            android:contentDescription="@string/fab_history" />

    </LinearLayout>

    <TextView
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>